{{!-- dashboard with logged in talks --}}
<h2 class="dashTitle"> MY TALKS </h2>

{{!-- listing talks --}}
{{#each talks as |talk|}}
<a href="/api/dashboard/{{talk.talk_id}}" style="font-family:evilEmpire; font-size:larger;">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="card col-9">
                <h5 class="card-header" style="color:black">{{talk.name}}</h5>
                <div class="card-body">
                    <h5 class="card-title" style="color:black">{{talk.description}}</h5>
                        {{#if talk.date}}
                            <p style="color:black">Where: {{talk.location}} on {{format_date talk.date}}</p>
                            <p style="color:black">Days until talk: {{distance talk.date}}</p>
                        {{else}}
                            <p style="color:black">{{talk.location}}</p>
                        {{/if}} 
                </div>
            </div> 
        </div>  
    </div>
</a>
{{/each}}

{{!-- add a new talk --}}
<h3 style="font-family:evilEmpire; border-bottom:solid black">Creating a New Talk:</h3>
<form> 
    <label for="talks" style="font-family:Helveticaneue;"> Please enter your talk Title:</label>
    <input type="text" id="talk-title" style="background-color:#FAEAB1; border:none; border-radius:50px; height: 20px"><br><br>
    <label for= "talk-description" style="font-family:Helveticaneue;"> Please enter your talk description:<br></label>
    <textarea type="text" id = "talk-description" style="background-color:#FAEAB1; border:none; border-radius:50px; height: 200px; width: 600px; padding-left:50px;"></textarea><br>
    <button class="addTalkBtn" id="create" title= "{{talk.talk_id}}" value="[{{#each talk.attends}}{{user_id}},{{/each}}]" id="{{user_id}}">add talk</button>
</form> 

    


    <script src = "/js/dashboard.js"> </script>


