<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coding Empire</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    {{!-- header section --}}
    <header class="header" id="header">
        <container class="navbar">
            <a href="/">
                <div class="navbarHome">
                    <img src="/Images/sand-castle.svg" alt="Castle" class="mainLogo" width="40" height="70">
                    <h1 class="navbarTitle">Coding Empire Conference</h1>
                </div>
            </a>
            
            <div class="navbarSelection">
                {{#if logged_in}}
                    <a href="/dashboard">
                        <p id="dash" class="logout">DASHBOARD</p>
                    </a>
                    <p id="logout" class="logout">LOGOUT</p>
                {{else}}
                <a href="/login">
                    <p class="login">SIGN-UP/LOGIN</p>
                </a>
                {{/if}}
            </div>
        </container>
    </header>

    {{!-- adding main section for handlebars to render --}}
    <main class="main" id="main">
        {{{body}}}
    </main>

    {{!-- footer --}}
    <footer class="footer" id="footer">
        <container class="footerNavbar">
            <div class="upperFooter">
                <div class="navbarHome">
                    <img src="/Images/sand-castle.svg" alt="Castle" class="mainLogo" width="40" height="70">
                    <h1 class="navbarTitle">Coding Empire Conference</h1>
                </div>
                <ul class="footerBtn">
                    {{#if logged_in}}
                    <li>
                        <a href="/dashboard" class="dashboard">
                            <p id="dash">DASHBOARD</p>
                        </a>
                    </li>
                    <li>
                        <p id="logout" class="logout">LOGOUT</p>
                    </li>
                    {{else}}
                    <li>
                        <a href="/login">SIGN-UP/LOGIN</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
            <div class="lowerFooter">
                <p>&#169Copyright By Carleton BootCamp Students</p>
            </div>
        </container>
    </footer>
    {{#if logged_in}}
        <script src="/js/logout.js"></script>
    {{/if}}
</body>
</html>

